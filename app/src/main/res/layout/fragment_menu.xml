<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MenuFragment"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="24dp"
    android:columnCount="4">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/testApp"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/app_projects"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:text="PROJECTS"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/campusButton"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/app_campus"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_margin="10dp"
           />
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:text="CAMPUS"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/newsButton"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/app_news"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:text="NEWS"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_margin="10dp"
        android:src="@drawable/app_map"/>

       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        android:text="MAPS"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/eventsButton"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/app_events"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:text="EVENTS"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/twitterButton"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/app_twitter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:text="FLUX"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/assosButton"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/app_assos"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:text="ASSOS"/>

    </LinearLayout>

</GridLayout>